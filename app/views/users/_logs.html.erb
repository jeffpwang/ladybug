<div class="posts">
   <h1 class="content-subhead">Log Entries</h1>
 
    <% @logs.reverse_each do |log| %>
    <section class="post">
      <header class="post-header">
        <% if !log.distortion.nil? %>
        <% if log.distortion.name == "Macho Mike" %>
            <div class="imgWrap">
            <%= image_tag "mosquito_thumb.png", size: "100x75", class: "post-avatar" %>
            <p class="imgDescription">Macho Mike</p>
            </div>
        <% elsif log.distortion.name == "Belittling Betty" %>
            <div class="imgWrap">
            <%= image_tag "beetle_thumb.png", size: "100x75", class: "post-avatar" %>
            <p class="imgDescription">Belittling Betty</p>
            </div>
        <% elsif log.distortion.name == "Anxious Andy" %>
            <div class="imgWrap">
            <%= image_tag "ant_thumb.png", size: "100x75", class: "post-avatar" %>
            <p class="imgDescription">Anxious Andy</p>
            </div>
        <% elsif log.distortion.name == "Hurtful Harry" %>
            <div class="imgWrap">
            <%= image_tag "hornet_thumb.png", size: "100x75", class: "post-avatar" %>
            <p class="imgDescription">Hurtful Harry</p>
            </div>
        <% elsif log.distortion.name == "Superstitious Sally" %>
            <div class="imgWrap">
            <%= image_tag "spider_thumb.png", size: "100x75", class: "post-avatar" %>
            <p class="imgDescription">Superstitious Sally</p>
            </div>
        <% elsif log.distortion.name == "Critical Carl" %>
            <div class="imgWrap">
            <%= image_tag "cricket_thumb.png", size: "100x75", class: "post-avatar" %>
            <p class="imgDescription">Critical Carl</p>
            </div>
        <% else %>
            <div class="imgWrap">
            <%= image_tag "thumb.png", size: "48x48", class: "post-avatar" %>
            </div>
        <% end %>
        <% end %>

    <h2 class="post-title"><%= log.created_at.strftime("%A, %d %b %Y")%></h2>
    
        <div class="post-description">
          <p>
            <%= log.content %><br>

            <ul>
                <% log.lady_bugs.each do |lady_bug| %>
                <li><p class="triangle-isosceles left"><%= lady_bug.content %><p<</li>
                <% end %>
            </ul>


          </p>
        </div>
    </section>

    <%= bar_chart "Overall" => current_user.average_overall, "Before" => log.before_rating, "After" => log.after_rating %>
    
    <p class="post-meta">
        Tags:
    <% log.tags.each do |tag| %>
          <a class="post-category post-category-design" href="<%=tag_path(tag.id) %>"><%= tag.name %></a>
    <% end %>
    </p>
    </header>
 


    <%= link_to "Delete Log", log_path(log.id), method: "delete", class: "btn btn-danger btn-sm pull-right"%>
    <%= link_to "Edit Log", edit_log_path(log.id), class: "btn btn-info btn-sm pull-right", style: "margin-right: 20px" %>
    <br />
    <% end %>

</div>

<%= will_paginate @logs %>